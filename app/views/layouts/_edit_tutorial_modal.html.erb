<div id="edit-tutorial-modal" class="reveal-modal small" data-reveal>

  <h2>Edit Tutorial</h2>

  <div>
    <% if params[:id] && params(:controller).eql?('tutorial') %>
      <%= form_for(@this_tutorial) do |f| %>

        <% if @this_tutorial.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@this_tutorial.errors.count, "error") %> prohibited this tutorial from being saved:</h2>
            <ul>
            <% @this_tutorial.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= f.label :title %><br>
          <%= f.text_field :title %>
        </div>
        <div class="field">
          <%= f.label :description %><br>
          <%= f.text_area :description %>
        </div>
        <div class="field">
          <%= f.label :category %><br>
          <%= f.select :category, [ 'Computer', 'Tablet', 'Phone' ] %>
        </div>
        <div class="field">
          <%= f.label :cover_photo %><br>
          <%= f.file_field :cover_photo %>
        </div>
        <div class="field">
          <%= f.label :video %><br>
          <%= f.file_field :video %>
        </div>
        <div class="actions">
          <%= f.submit('Submit') %>
        </div>

      <% end %>
    <% end %>

  </div>
  <a class="close-reveal-modal">&#215;</a>
</div>
