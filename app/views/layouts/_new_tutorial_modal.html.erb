<div id="new-tutorial-modal" class="reveal-modal small" data-reveal>

  <h2>New Tutorial</h2>

  <div>

    <%= form_for(@new_tutorial) do |f| %>

      <% if @new_tutorial.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@new_tutorial.errors.count, "error") %> prohibited this tutorial from being saved:</h2>
          <ul>
          <% @new_tutorial.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :title %><br>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_area :description %>
      </div>
      <div class="field">
        <%= f.label :category %><br>
        <%= f.select :category, [ 'Computer', 'Tablet', 'Phone' ] %>
      </div>
      <div class="field">
        <%= f.label :cover_photo %><span class="disclaimer">(if none selected, default will be used)</span><br>
        <%= f.file_field :cover_photo %>
      </div>
      <div class="field">
        <%= f.label :video %><br>
        <%= f.file_field :video %>
      </div>

      <div class="actions tuts-submit">
        <%= f.submit('Submit') %>
      </div>
      <div id="upload-load">
        <div class='loading'></div>
        <p> Please wait while your file(s) upload. </p>
      </div>


    <% end %>

  </div>
  <a class="close-reveal-modal">&#215;</a>
</div>
