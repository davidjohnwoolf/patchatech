<h1><%= @user.username %>'s Profile</h1>

<%= image_tag(@user.picture.url(:normal)) %>
<ul>
  <li>Name: <%= @user.first_name %> <%= @user.last_name %></li>
  <li>Email: <%= @user.email %></li>
</ul>

<% if @user == current_user %>
  <%= link_to 'Edit Account', edit_user_registration_path %>
  <%= link_to 'Create Tutorial', new_tutorial_path %>
  <h2>My Tutorials</h2>
  <ul>
  <% @tutorials.each do |t| %>
    <li><%= link_to t.title, tutorial_path(t.id) %></li>
  <% end %>
  </ul>

  <% else %>
    <h2><%= @user.username %>'s Tutorials</h2>
    <ul>
    <% @user.tutorials.each do |t| %>
      <li><%= link_to t.title, tutorial_path(t.id) %></li>
    <% end %>
    </ul>
<% end %>
