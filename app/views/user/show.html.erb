<div class="row">
  <div class="large-3 columns">
    <%= image_tag(@user.picture.url(:normal)) %>
  </div>
  <div class="large-4 columns">
    <ul class="profile-info">
      <li><%= @user.username %></li>
      <li><%= @user.first_name %> <%= @user.last_name %></li>
      <li><%= @user.email %></li>
      <li><%= link_to 'Edit Account', edit_user_registration_path, class: "button tiny" %></li>
      <li><%= link_to 'Create Tutorial', new_tutorial_path, class: "button tiny" %></li>
    </ul>
  </div>

    <div class="large-12 columns">
      <% if @user == current_user %>
        <h2>My Tutorials</h2>
        <ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-4">
          <% @tutorials.each do |t| %>
            <li>
              <a href="<%= tutorial_path(t.id) %>"><%= image_tag(t.video_tile.thumb)%></a>
              <div class="tile-title"><%= t.title %></div>
              <%= link_to('Edit', edit_tutorial_path(t.id), class: "button tiny tutorial-option") %>
              <%= link_to('Destroy', tutorial_path(t.id), method: :delete, class: "button tiny alert tutorial-option") %>
            </li>
          <% end %>
        </ul>

        <% else %>
          <h2><%= @user.username %>'s Tutorials</h2>
          <ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-4">
            <% @tutorials.each do |t| %>
              <li><a href="<%= tutorial_path(t.id) %>"><%= image_tag(t.video_tile.thumb)%></a></li>
            <% end %>
          </ul>
      <% end %>
    </div>
</div>
