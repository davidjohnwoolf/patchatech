<div class="row">
  <div class="large-3 columns">
    <%= image_tag(@user.picture.url(:normal)) %>
  </div>
  <div class="large-4 columns">
    <ul class="profile-info">
      <li><%= @user.username %></li>
      <li><%= @user.first_name %> <%= @user.last_name %></li>
      <li><%= @user.email %></li>
      <li><%= link_to 'Edit Account', edit_user_registration_path, class: "button tiny" %></li>
      <li><%= link_to 'Create Tutorial', new_tutorial_path, class: "button tiny" %></li>
    </ul>
  </div>


  <div class="large-12 columns">
    <h2><%= @user.id == current_user.id ? "My" : "#{@user.username}'s" %> Tutorials</h2>
      <ul class="small-block-grid-2 medium-block-grid-3 large-block-grid-4">
        <% @tutorials.each do |tutorial| %>
          <li>
            <a href="<%= tutorial_path(tutorial.id) %>"><%= image_tag(tutorial.video_tile.thumb)%></a>
            <div class="tile-title"><%= truncate(tutorial.title, length: 21) %></div>
            <%= link_to('Edit', edit_tutorial_path(tutorial.id), class: "button tiny tutorial-option") %>
            <%= link_to('Destroy', tutorial_path(tutorial.id), method: :delete, data: {confirm: "Are you sure?"}, class: "button tiny alert tutorial-option") %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
